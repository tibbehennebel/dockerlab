// Triggert automatisch bij elke push (Poll SCM: elke minuut)
properties([pipelineTriggers([pollSCM('* * * * *')])])

node {
    stage('Preparation') {
        catchError(buildResult: 'SUCCESS') {
            sh 'docker stop samplerunning'
            sh 'docker rm samplerunning'
        }
    }
    stage('Build') {
        build 'BuildExampleApp'
    }
    stage('Results') {
        build 'TestSampleApp'
    }
}